<?xml version="1.0" encoding="utf-8"?>
<MotionScene

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe motion:dragDirection="dragUp"/>
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>


    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/article_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="27dp" />
        </Constraint>
        <Constraint
            android:id="@+id/article_title"
            android:elevation="4dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp">
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="16sp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/article_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/article_img_container">
            <CustomAttribute
                motion:attributeName="bottom_right_corner"
                motion:methodName="setBottomRightCorner"
                motion:customDimension="34dp" />
        </Constraint>

        <Constraint
            android:id="@+id/article_img_container"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <Constraint
            android:layout_marginEnd="8dp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:elevation="2dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/article_title"
            motion:layout_constraintBottom_toBottomOf="@+id/article_img_container" >
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="10sp" />
        </Constraint>

    </ConstraintSet>
</MotionScene>